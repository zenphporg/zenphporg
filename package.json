{
  "private": true,
  "type": "module",
  "scripts": {
    "cb": "composer update && bun update",
    "build": "bun zz && vite build",
    "build:ssr": "bun zz && vite build && vite build --ssr",
    "dev": "bun zz && vite",
    "format": "prettier --write resources/",
    "format:check": "prettier --check resources/",
    "lint": "eslint . --fix",
    "fix": "./vendor/bin/fixr --dirty && bun run format && bun run lint",
    "test:js": "vitest --run",
    "test:js:watch": "vitest",
    "test:js:ui": "vitest --ui",
    "test:js:coverage": "vitest --coverage --run",
    "prod": "bun zz && vite build && vite build --ssr",
    "zz": "php artisan ziggy:generate --types && php artisan zorah:generate"
  },
  "dependencies": {
    "@headlessui/vue": "^1.7.23",
    "@inertiajs/vue3": "^2.0.14",
    "@tailwindcss/forms": "^0.5.10",
    "@tailwindcss/vite": "^4.1.11",
    "@types/node": "^24.0.14",
    "@types/ziggy-js": "^1.8.0",
    "@vitejs/plugin-vue": "^6.0.0",
    "@vueuse/core": "^13.5.0",
    "class-variance-authority": "^0.7.1",
    "clsx": "^2.1.1",
    "concurrently": "^9.2.0",
    "laravel-echo": "^2.1.6",
    "laravel-vite-plugin": "^2.0.0",
    "lucide": "^0.525.0",
    "lucide-vue-next": "^0.525.0",
    "pinia": "^3.0.3",
    "postcss-import": "^16.1.1",
    "pusher-js": "^8.4.0",
    "reka-ui": "^2.3.2",
    "tailwind-merge": "^3.3.1",
    "tailwindcss": "^4.1.11",
    "tailwindcss-animate": "^1.0.7",
    "typescript": "^5.8.3",
    "vite": "^7.0.5",
    "vue": "^3.5.17",
    "ziggy-js": "^2.5.3"
  },
  "devDependencies": {
    "@commitlint/cli": "^19.8.1",
    "@commitlint/config-conventional": "^19.8.1",
    "@eslint/js": "^9.31.0",
    "@semantic-release/changelog": "^6.0.3",
    "@semantic-release/git": "^10.0.1",
    "@semantic-release/github": "^11.0.3",
    "@vitest/coverage-v8": "^3.2.4",
    "@vitest/ui": "3.2.4",
    "@vue/eslint-config-typescript": "^14.6.0",
    "@vue/runtime-core": "^3.5.17",
    "@vue/test-utils": "^2.4.6",
    "babel-plugin-istanbul": "^7.0.0",
    "eslint": "^9.31.0",
    "eslint-config-prettier": "^10.1.5",
    "eslint-plugin-vue": "^10.3.0",
    "husky": "^9.1.7",
    "jsdom": "^26.1.0",
    "prettier": "^3.6.2",
    "prettier-plugin-organize-imports": "^4.1.0",
    "prettier-plugin-tailwindcss": "^0.6.14",
    "semantic-release": "^24.2.7",
    "tw-animate-css": "^1.3.5",
    "typescript-eslint": "^8.37.0",
    "unplugin-auto-import": "^19.3.0",
    "unplugin-vue-components": "^28.8.0",
    "vitest": "^3.2.4",
    "vue-tsc": "^3.0.1"
  },
  "optionalDependencies": {
    "@rollup/rollup-linux-x64-gnu": "4.44.2",
    "@tailwindcss/oxide-linux-x64-gnu": "^4.1.11",
    "lightningcss-linux-x64-gnu": "^1.30.1"
  },
  "commitlint": {
    "extends": [
      "@commitlint/config-conventional"
    ],
    "rules": {
      "header-max-length": [
        2,
        "always",
        120
      ],
      "type-enum": [
        2,
        "always",
        [
          "breaking",
          "feat",
          "fix",
          "refactor",
          "docs",
          "wip",
          "chore",
          "style",
          "test"
        ]
      ]
    }
  },
  "trustedDependencies": [
    "@tailwindcss/oxide",
    "esbuild",
    "vue-demi"
  ]
}
