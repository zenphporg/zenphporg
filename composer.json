{
    "$schema": "https://getcomposer.org/schema.json",
    "name": "druidweb/druid",
    "type": "project",
    "description": "A modern, opinionated starter kit for Laravel 12+ applications",
    "keywords": [
        "laravel",
        "framework",
        "starter-kit"
    ],
    "license": "MIT",
    "require": {
        "php": "^8.3",
        "inertiajs/inertia-laravel": "^2.0.2",
        "laravel/framework": "^12.9.0",
        "laravel/sanctum": "^4.0.8",
        "laravel/tinker": "^2.10.1",
        "predis/predis": "^3.0.1",
        "pusher/pusher-php-server": "^7.2.7",
        "tightenco/ziggy": "^2.5.2",
        "zenphp/modulr": "^1.0"
    },
    "require-dev": {
        "druidweb/coming-soon": "^1.0",
        "fakerphp/faker": "^1.24.1",
        "larastan/larastan": "^3.4",
        "mockery/mockery": "^1.6.12",
        "nunomaduro/collision": "^8.8.0",
        "pestphp/pest": "^3.8",
        "pestphp/pest-plugin-laravel": "^3.2",
        "rector/rector": "^2.1",
        "zenphp/fixr": "^1.0.3",
        "zenphp/zorah": "^1.0"
    },
    "autoload": {
        "psr-4": {
            "App\\": "app/",
            "Database\\Factories\\": "database/factories/",
            "Database\\Seeders\\": "database/seeders/"
        }
    },
    "autoload-dev": {
        "psr-4": {
            "Tests\\": "tests/"
        }
    },
    "scripts": {
        "post-autoload-dump": [
            "Illuminate\\Foundation\\ComposerScripts::postAutoloadDump",
            "@php artisan package:discover --ansi"
        ],
        "post-update-cmd": [
            "@php artisan vendor:publish --tag=laravel-assets --ansi --force"
        ],
        "post-root-package-install": [
            "@php -r \"file_exists('.env') || copy('.env.example', '.env');\""
        ],
        "post-create-project-cmd": [
            "@php artisan key:generate --ansi",
            "@php -r \"file_exists('database/database.sqlite') || touch('database/database.sqlite');\"",
            "@php artisan migrate --graceful --ansi"
        ],
        "dev": [
            "Composer\\Config::disableProcessTimeout",
            "npx concurrently -c \"#93c5fd,#c4b5fd,#fb7185,#fdba74\" \"php artisan serve\" \"php artisan queue:listen --tries=1\" \"php artisan pail --timeout=0\" \"npm run dev\" --names=server,queue,logs,vite"
        ],
        "lint": [
            "./vendor/bin/fixr",
            "bun run lint"
        ],
        "refactor": "./vendor/bin/rector process",
        "fix": [
            "@refactor",
            "@test:types",
            "bun run format",
            "./vendor/bin/fixr"
        ],
        "test:lint": [
            "./vendor/bin/fixr --test",
            "bun run format:check"
        ],
        "test:feat": "./vendor/bin/pest --parallel",
        "test:feat:coverage": "./vendor/bin/pest --parallel --coverage --min=100",
        "test:types": "./vendor/bin/phpstan analyse --memory-limit=256M",
        "test:refactor": "./vendor/bin/rector process --dry-run",
        "test": [
            "@test:feat",
            "@test:lint",
            "@test:types",
            "@test:refactor"
        ],
        "baseline": "./vendor/bin/phpstan analyse --generate-baseline --allow-empty-baseline --memory-limit=256M"
    },
    "extra": {
        "laravel": {
            "dont-discover": []
        }
    },
    "config": {
        "optimize-autoloader": true,
        "preferred-install": "dist",
        "sort-packages": true,
        "allow-plugins": {
            "pestphp/pest-plugin": true,
            "php-http/discovery": true
        }
    },
    "minimum-stability": "dev",
    "prefer-stable": true
}
